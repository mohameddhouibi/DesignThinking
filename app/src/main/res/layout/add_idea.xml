<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_alignParentTop="true"
    android:layout_gravity="center"
    >





    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        >

        <RelativeLayout
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/concept">
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="0dp"

                android:src="@drawable/ic_close_black_24dp" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New idea details"
                android:textSize="25dp"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"></TextView>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:background="@color/colorWhite">
            <EditText
                android:id="@+id/info1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Idea Title"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                ></EditText>

            <EditText
                android:id="@+id/info3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Sector"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/info1"
                android:layout_marginTop="35dp"
                ></EditText>
            <EditText
                android:id="@+id/info4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Problem"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/info3"
                android:layout_marginTop="35dp"
                ></EditText>

            <EditText
                android:id="@+id/info2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:fontFamily="@font/montserrat"
                android:layout_centerHorizontal="true"

                android:layout_below="@+id/info4"
                android:layout_marginTop="35dp"
                android:visibility="visible"
                ></EditText>

            <Button
                android:id="@+id/conf"
                android:layout_below="@id/info2"
                android:layout_marginTop="35dp"
                android:text="Confirm"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerbutton2"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:textColor="#003366">
            </Button>
            <Button
                android:id="@+id/annul"
                android:layout_below="@id/conf"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
                android:layout_centerHorizontal="true"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerbutton1"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:textColor="#FFFF">
            </Button>
        </RelativeLayout>



    </RelativeLayout>




</androidx.cardview.widget.CardView>