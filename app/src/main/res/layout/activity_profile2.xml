<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.ProfileActivity"
    android:background="@drawable/back"
    >
   <TextView
       android:id="@+id/profiletxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:text="Profile"
       android:visibility="invisible"
       android:textSize="30sp"
       android:textStyle="bold"
       android:textColor="#003366"
       android:layout_centerHorizontal="true"
       android:fontFamily="@font/montserrat">
   </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_photo"
        android:layout_below="@+id/profiletxt"
        android:layout_marginTop="80dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FFF"
        android:layout_centerHorizontal="true"
        app:civ_border_width="3dp"/>
<TextView
    android:id="@+id/username_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="UserName"
    android:textSize="30sp"
    android:textColor="#003366"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/montserrat"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/profile_photo"></TextView>
    <TextView
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email"
        android:textSize="30sp"
        android:textColor="#003366"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/username_profile"></TextView>


    <Button
        android:id="@+id/btlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottom_nav"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/cornerbutton2">

    </Button>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav"
        app:itemTextColor="#FFF"
        app:menu="@menu/bottom_navigation"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>