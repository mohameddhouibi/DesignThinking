<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cornerbutton"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"

        android:id="@+id/Cophoto"
        android:src="@drawable/userphoto">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_user"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Cophoto"
        android:textSize="17dp"
        android:textColor="#010E50"
        android:fontFamily="@font/montserrat"
        android:text="UserName"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentitself"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/comment_user"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:textSize="17dp"
        android:fontFamily="@font/montserrat"
        android:text="View All comments"></TextView>

</RelativeLayout>