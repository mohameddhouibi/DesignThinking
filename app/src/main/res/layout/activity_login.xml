<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro.LoginActivity"
    >

    <EditText
        android:id="@+id/login_mail"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#003366"
        android:fontFamily="@font/montserrat"
        android:hint="Email"
        android:layout_below="@+id/login_photo"
         />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/azer"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/login_mail">

    <EditText
        android:id="@+id/login_password"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#003366"
        android:fontFamily="@font/montserrat"
        android:hint="Password"
        android:inputType="textPassword"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/azer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="312dp"
        android:text="Forgot password?"
        android:textSize="12sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerbutton1"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@+id/forgot"
        android:textColor="#FFFFFF"
/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="156dp"
        android:layout_height="13dp"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="You don't have an account yet?"
        android:textSize="10dp"

/>
    <Button
        android:id="@+id/Login_SignUp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cornerbutton2"
        android:fontFamily="@font/montserrat"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#003366"
 />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:src="@drawable/userphoto"
        app:civ_border_color="#FFF"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Login_SignUp"/>


</RelativeLayout>